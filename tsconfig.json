{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "paths": {
      "@/assets/*": ["./assets/*"],
      "@/modules/*": ["./modules/*"],
      "@/drizzle/*": ["./drizzle/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "include": ["**/*.ts", "**/*.tsx","drizzle" ,"./lib", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
