{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/assets/*": ["./assets/*"],
      "@/modules/*": ["./modules/*"],
      "@/better-auth/*": ["./lib/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "include": ["**/*.ts", "**/*.tsx", "./lib", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
